<view class="my-center">

  <!-- 用户设置 -->
  <view class="config-floor" bindtap="clickConfig">
      <image src="../../../image/icos/config_81.png" />
      <text>用户设置</text>
  </view> <!-- .config-floor -->

  <!-- 会员信息 -->
  <view class="user-floor">

    <!-- 会员基础信息 -->
    <view class="user-inf" bindtap="clickUser">

      <!-- 头像 -->
      <image src="{{ user.avatar || user.wxAvatarUrl || '../../../image/icos/avatar.png' }}" class="user-avatar" />

      <!-- 昵称、手机号 -->
      <view class="user-text">
        <text class="user-member {{ user.isMember ? 'user-vip' : 'user-vip' }}">VIP</text>
        <view class="user-name">{{ user.userName || user.wxNickName }}</view>
      </view> <!-- .user-text -->

    </view> <!-- .user-inf -->

    <!-- 会员扩展信息 -->
    <view class="user-ex">
        <view class="user-code">会员编号：{{ user.userCode }}</view>
        <view class="user-serv-cnt">
          <text wx:if="{{ varCount }}">已购买{{ vasCount }}项服务</text>
          <text wx:else>未购买服务</text>
        </view>
    </view> <!-- .user-ex -->

  </view> <!-- .user-floor -->

  <!--  积分账户 -->
  <view class="point-floor">
    <view class="point-text">积分账户：<text>{{ pointAmount || 0 }}</text></view>
    <view class="point-recharge" bindtap="clickPointRecharge">充值</view>
  </view> <!-- .point-floor -->

  <!-- 销售业绩 -->
  <view class="my-floor sale-floor">

    <view class="floor-title">
      <view class="title-text">销售业绩</view>
      <view class="title-nav">销售明细<image src="../../../image/icos/nav_white_81.png" class="menu-nav" /></view>
    </view>

    <swiper
        style="height: 180rpx"
        indicator-dots="true"
        indicator-color="rgba(0, 0, 0, .1)"
        indicator-active-color="rgba(255, 153, 0, 1)"
        circular="true"
        bindchange="changeSaleCount">

      <!-- 今日销售统计 -->
      <swiper-item>
        <view class="count-grp">
          <view><view>今日销售件数</view><view>{{ todaySaleSkuQuantity }}</view></view>
          <view><view>今日订单量</view><view>{{ todaySaleQuantity }}</view></view>
          <view><view>今日销售额</view><view>￥{{ todaySaleAmountString }}</view></view>
        </view>
      </swiper-item>

      <!-- 本周销售统计 -->
      <swiper-item>
        <view class="count-grp">
          <view><view>本周销售件数</view><view>{{ weekSaleSkuQuantity }}</view></view>
          <view><view>本周订单量</view><view>{{ weekSaleQuantity }}</view></view>
          <view><view>本周销售额</view><view>￥{{ weekSaleAmountString }}</view></view>
        </view>
      </swiper-item>

      <!-- 本月销售统计 -->
      <swiper-item>
        <view class="count-grp">
          <view><view>本月销售件数</view><view>{{ monthSaleSkuQuantity }}</view></view>
          <view><view>本月订单量</view><view>{{ monthSaleQuantity }}</view></view>
          <view><view>本月销售额</view><view>￥{{ monthSaleAmountString }}</view></view>
        </view>
      </swiper-item>

    </swiper>

  </view> <!-- .sale-floor -->

  <!-- 我的订单 -->
  <view class="my-floor order-floor">

    <view class="floor-title">
      <view class="title-text">我的订单</view>
      <view class="title-nav">查看全部<image src="../../../image/icos/nav_white_81.png" class="menu-nav" /></view>
    </view>

    <view class="floor-icos">

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>待支付</view>
        <text wx:if="{{ orderToPayCount }}"></text>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>待发货</view>
        <text wx:if="{{ orderToDeliveryCount }}"></text>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>待收货</view>
        <text wx:if="{{ orderToDoneCount }}"></text>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>已取消</view>
      </view> <!-- .ico-item -->

    </view> <!-- .floor-icos -->

  </view> <!-- .order-floor -->

  <!-- 个性服务 -->
  <view class="my-floor serv-floor">

    <view class="floor-title">
      <view class="title-text">个性服务</view>
    </view>

    <view class="floor-icos">

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>售后记录</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>收支记录</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>对账清单</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>扫码分拣</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>购买服务</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>客户列表</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>卡包</view>
      </view> <!-- .ico-item -->

      <view class="ico-item">
        <image src="../../../image/icos/flower_primary_81.png" />
        <view>我的搭档</view>
      </view> <!-- .ico-item -->

    </view> <!-- .floor-icos -->

  </view> <!-- .serv-floor -->

  <!--  退出账号 -->
  <!--<button type="" class="login-btn" bindtap="">退出登录</button>-->

</view>