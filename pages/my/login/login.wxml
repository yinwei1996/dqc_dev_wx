<import src="../../../component/common/agreementSheet/agreementSheet.wxml" />

<view class="login">

  <!-- LOGO -->
  <view class="logo">
    <image mode="aspectFit" src="../../../image/logo_login.png" />
  </view>

  <view class="op-btns">
    <button class="btn btn-primary" open-type="getUserInfo" disabled="{{ buttonDisabled || disagree }}" bindgetuserinfo="bindUserInfo">{{buttonText}}</button>
  </view>

  <view class="agreement">
    <image class="item-check" src="../../../image/icos/unchecked_48.png" data-action="agree" bindtap="clickAgreement" wx:if="{{disagree}}" />
    <image class="item-check" src="../../../image/icos/checked_primary_48.png" data-action="disagree" bindtap="clickAgreement" wx:else />
    <text>我已阅读并同意"</text><text class="agreement-name" bindtap="showAgreement">合采网用户注册协议</text><text>"</text>
  </view>

  <view class="copyright">
    ©2019
  </view>

   <template is="agreementSheet" data="{{ hidden: hiddenAgreementSheet, hide: 'closeAgreementSheet' }}" />

</view>
