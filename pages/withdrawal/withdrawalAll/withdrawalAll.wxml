<import src="../../../component/common/tabNav/tabNav.wxml" />
<import src="../../../component/common/withdrawalsView/withdrawalsView.wxml" />

<view class="order-all">

  <!-- Tab区域 -->
  <view class="tabs">

    <!-- Tab导航 -->
    <template is="tabNav" data="{{ items: tabNavItems, currentTab: tab }}" />

    <!-- Tab内容 -->
    <view class="tab-content">

      <!-- 全部 -->
      <scroll-view
        class="content-item {{ tab == 'all' ? 'active' : '' }}"
        scroll-y="true"
        enable-back-to-top="true"
        bindscrolltolower="scrollToLower"
        style="height:{{scrollViewHeight}}">
        <template is="withdrawalsView" data="{{ withdrawals: all_withdrawals }}" />
      </scroll-view>

      <!-- 待审核 -->
      <scroll-view
        class="content-item {{ tab == 'todo' ? 'active' : '' }}"
        scroll-y="true"
        enable-back-to-top="true"
        bindscrolltolower="scrollToLower"
        style="height:{{scrollViewHeight}}">
        <template is="withdrawalsView" data="{{ withdrawals: todo_withdrawals }}" />
      </scroll-view>

      <!-- 已完成 -->
      <scroll-view
        class="content-item {{ tab == 'done' ? 'active' : '' }}"
        scroll-y="true"
        enable-back-to-top="true"
        bindscrolltolower="scrollToLower"
        style="height:{{scrollViewHeight}}">
        <template is="withdrawalsView" data="{{ withdrawals: done_withdrawals }}" />
      </scroll-view>

    </view> <!-- .tab-content -->

  </view> <!-- .tabs -->

</view>
