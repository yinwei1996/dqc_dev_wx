<import src="../../../component/common/bankcardsView/bankcardsView.wxml" />

<view class="bankcard-all">

  <scroll-view
    scroll-y="true"
    enable-back-to-top="true"
    bindscrolltolower="scrollToLower"
    style="height:{{scrollViewHeight}}">
    <template is="bankcardsView" data="{{ cards: cards, opCardId: opCardId }}" />
  </scroll-view>

  <view class="op-btns-fixed">
    <button class="btn btn-primary-outline" bindtap="addCard">新增银行卡</button>
  </view> <!-- .ops -->

</view>
