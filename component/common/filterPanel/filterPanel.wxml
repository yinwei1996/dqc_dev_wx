                    <!--<span class="filter_condition">型号</span>-->
                <!--</view>-->
                <!--<view class="filter">-->
                    <!--<span class="filter_condition">电压</span>-->
                <!--</view>-->
                <view class="confirm_btn" style="">
                    <button class="resetBtn">重置</button>
                    <button class="confirmBtn btn btn-primary" bindtap="confirmBtn">确定</button>
                </view>
            </scroll-view>
        </view>
    </view>
</template>