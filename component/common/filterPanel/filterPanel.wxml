                        <!--<span class="filter_condition">品牌</span>-->
                        <!--<view class="promotion" wx:for="{{ brands }}" wx:for-item="brand" wx:key="brandId" data-id="{{item.brandId}}">-->
                            <!--<span>{{brand.brandName}}</span>-->
                        <!--</view>-->
                    <!--</view>-->
                <!--</view>-->
                <!--<view class="filter">-->
                    <!--<span class="filter_condition">功率</span>-->
                <!--</view>-->
